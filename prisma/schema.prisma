generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  image      String?
  solAddress String?
  isVerified Boolean?
  hotels     Hotel[]
}

model Hotel {
  id                  String     @id @default(cuid())
  name                String
  location            String
  MerchantSolAddress  String
  userId              String
  user                User       @relation(fields: [userId], references: [id])
  rooms               HotelRoom[]
}

model Room {
  id     String     @id @default(cuid())
  number Int
  Floor  Int
  Size   Int
  hotels HotelRoom[]
}

model HotelRoom {
  id        String   @id @default(cuid())
  hotelId   String
  roomId    String
  hotel     Hotel    @relation(fields: [hotelId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
  checkIn   DateTime @default(now())

  @@unique([hotelId, roomId])
}
